---
import ProjectsShowcase from "../components/ProjectsShowcase";
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const projects = (await getCollection("project")).sort((a, b) =>
  b.data.fechaInicio.localeCompare(a.data.fechaInicio),
);
---

<Layout title="All Projects">
  <div
    class="tw-relative tw-w-full tw-min-h-screen tw-bg-neutral-950 tw-text-white"
  >
    <!-- BotÃ³n volver -->
    <a
      href="/#projects"
      class="tw-absolute tw-top-4 tw-left-4 sm:tw-top-6 sm:tw-left-6 tw-z-30 tw-flex tw-items-center tw-gap-2
             tw-bg-[#ffffff]/10 hover:tw-bg-[#ffffff]/20 tw-text-white tw-font-semibold
             tw-rounded-full tw-px-3 tw-py-2 sm:tw-px-5 sm:tw-py-3 tw-text-sm sm:tw-text-lg tw-transition-all tw-shadow-md"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="tw-h-4 tw-w-4 sm:tw-h-6 sm:tw-w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"
        ></path>
      </svg>
      Back
    </a>

    <ProjectsShowcase
      projects={projects}
      limit={-1}
      title="All Projects"
      isFullPage={true}
      client:only
    />
  </div>
</Layout>
